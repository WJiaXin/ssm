<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace指向对应的接口-->
<mapper namespace="com.hwadee.ssm.mappers.LogsMapper">
  <!--sql id 与接口方法一一对应-->
  <insert id="insert" parameterType="com.hwadee.ssm.entity.Logs" useGeneratedKeys="true" keyProperty="log_id">
    insert into logs (log_userId, log_state, log_date, log_award)
    values (#{logUserid}, #{logState},#{logDate},#{logAward});
  </insert>
  <select id="getApplys" resultType="com.hwadee.ssm.entity.Logs">
    select * from logs
    where log_userId = #{logUserId}
    order by log_date
    limit #{pageNum},#{pageCount}
  </select>
  <select id="getNeedWork" resultType="com.hwadee.ssm.entity.WorkOvertime">
    select *
    from work_overtime
    where data=#{workDay}
  </select>
</mapper>